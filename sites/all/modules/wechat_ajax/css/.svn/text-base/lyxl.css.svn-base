@font-face {
  font-family: 'Droid Serif', serif;
  font-weight: normal;
  font-style: normal;
}

body { 
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  height: 100%;
  /*overflow: hidden;*/
  margin : 0 auto;
  padding : 0;
  font : 100%/1.4 'Droid Serif', serif;
  background-color: #ebebeb;
}

.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.maincontent {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  position: relative;
  padding: 0px;
  /*overflow: hidden;*/
}

.head {
  width: 100%;
  height: 150;
  background-image: linear-gradient(top, #fad342 0%, #f2b50c 100%);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #fad342), color-stop(1, #f2b50c));
  background-image: -webkit-linear-gradient(top, #fad342 0%, #f2b50c 100%);
  text-align: center;
}

.mp-logo {
  width: 70%;
  margin: 0 auto;
}

.footer {
  width: 100%;
  height: 100px;
  background-image: linear-gradient(top, #fad342 0%, #f2b50c 100%);
  background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #fad342), color-stop(1, #f2b50c));
  background-image: -webkit-linear-gradient(top, #fad342 0%, #f2b50c 100%);
}

/****For lyxl product list ********/
ul.contact {
  padding: 6px 0 0 10px;
}

.contact > li {
  text-align: left;
  color: #1221eb;
  list-style: none;
  text-shadow:0 1px 0 #ffffff;
}

ul.products {
  background-color: #f9ce37;
}

.ulclass {
  padding: 0px 10px;
  list-style: none;
}

.item-split-li {
  border-top: 1px solid #7e7e7e;
  border-bottom: 1px solid #ffffff;
}

.item-li {
  text-align: left;
  padding: 5px 0;
}

.item-img {
  width: 40%;
  float: left;
}

.item-p {
  margin-left: 47%;
  margin-top: 0px;
  margin-bottom: 0px;
  font-size: 1.1em;
  text-shadow:0 1px 0 #ffffff;
}


.item-button {
  width: 4em;
  float: right;
  text-align: center;
  font-size: 1.5em;
  text-decoration: none;
  margin: 20px 0px;
  color: #ffffff;
  background: #848d93; 
  -webkit-box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
  box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
}

/********Each of node page for lyxl detail item*******/
.node-page {
  padding: 0px 10px;
}

.p-node-title {
  font-size: 1.5em;
  text-align: center;
  text-shadow:0 1px 0 #ffffff;
  background: #c4c4c4;
}

.p-node-sche {
  font-size: 1.1em;
  text-align: left;
  line-height: 1.7em;
  padding: 4px 8px 4px 10px;
  background: #c4c4c4;
}

.p-node-notes {
  font-size: 0.9em;
  text-align: left;
}

.node-icon {
  width: 12%;
  float: left;
}

.p-node-notes {
  float: left;
  margin-left: 2em;
}

.p-node-ticket,
.p-node-guide,
.p-node-insur,
.p-node-hotel,
.p-node-meal,
.p-node-bus {
  float: left;
  margin-left: 2em;
  width: 60%;
  margin-top: 2px;
}

.node-ul {
  padding: 0px;
  list-style: none;
}

.return-button {
  width: 4em;
  margin: 0 auto;
  text-align: center;
  font-size: 1.5em;
  text-decoration: none;
  color: #ffffff;
  background: #848d93; 
  -webkit-box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
  -moz-box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
  box-shadow: 5px 5px 5px 0px rgba(0,0,0,0.75);
}

