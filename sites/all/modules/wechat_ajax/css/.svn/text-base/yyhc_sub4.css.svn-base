@font-face {
    font-family: 'Droid Serif', serif;
    font-weight: normal;
    font-style: normal;
}

body, .maincontent, .anchor-head, #anchor, #anchor p, .anchor-title, .anchor-line, 
#a-circle, #a-line, #a-line, .device, .swiper-slide img,
.swiper-slide p {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

body { 
  width: 100%;
  height: 100%;
  margin : 0 auto;
  padding : 0;
  font : 100%/1.4 'Droid Serif', serif;
  background: url('http://mxweixin.dreamland360.com/sites/all/modules/wechat_ajax/imgs/yyhc_bj_low.jpg') no-repeat center center fixed;
  -moz-background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  overflow: hidden;
}

.maincontent {
  margin: 0 auto;
  /*margin-top: 5%;*/
  width: 100%;
}

.device {
  clear: both;
  width: 100%;
  /*margin-left: 8%;
  margin-right: auto;
  */
  height: 80%;
	overflow:hidden;
  margin-top: 7%;
  position: absolute;
  /*position: relative;
  border: 1px solid #fff;
  background: #fff;
  box-shadow: 2px 2px 8px #000;
  border-radius: 10px;*/
  padding: 0px;
}

.audio_wrapper {
  clear: both;
  width: 80%;
  margin: 0 auto;
  bottom: 20%;
  margin-left: 10%;
  position: absolute;
}
/* for small screen like iphone4s iphone5 and samsung small screen portrait */
@media only screen and (max-width : 320px) 
{
  .audio_wrapper {
    bottom: 5%;
  }
}

.anchor-head {
  width: 25%;
  margin-left: 7%;
  margin-top: 8%;
}


#anchor p {
  margin: 0px;
}

#anchor {
  width: 100%;
}
@media only screen and (max-width : 320px) 
{
  #anchor {
    width: 120%;
  }
}


.anchor-title {
  padding: 5px;
  background: #fff;
  text-align: center;
  font-size : 0.8em;
  font-weight: bold;
  color: #f292a6;
  border-radius: 15px;
  position: relative;
}

.anchor-title::before {
	content: "";
	width: 0px;
	height: 0px;
	border: 0.4em solid transparent;
	position: absolute;
}

.anchor-title.top-left::before {
	left: 15px;
	bottom: -15px;
	border-top: 15px solid #fff;
}


.anchor-line {
  clear: both;
  width: 100%;
  margin-top: 3%;
  position: relative;
}

#a-circle {
  margin-left: 10%;
  float: left;
  position: relative;
}


#a-line {
  margin-top: 6px;
  width: 75%;
  background-color: #616260;
  height: 5px;
  display: block;
  border-top-right-radius:3px;
  border-bottom-right-radius:3px;
  float: left;
}

.swiper-slide img {
  margin: 5px;
  display:block;
  background-color: white;
  padding: 8px;
  max-width: 100%;
  width: 15em;
  box-shadow: 2px 2px 8px #000;
  border-radius: 10px;
  text-align: center;
  overflow: hidden;
  margin-left: 10%;
}

.swiper-slide p {
  margin: 5px;
  display:block;
  background-color: white;
  max-width: 100%;
  width: 13.5em;
  padding: 8px 8px 8px 12px;
  box-shadow: 2px 2px 8px #000;
  border-radius: 10px;
  text-align: left;
  font-size: 1.1em;
  margin-left: 10%;
}

@media only screen and (min-width : 321px) {
  .swiper-slide img {
    width: 17em;
  }
  .swiper-slide p {
    width: 15.5em;
  }
}

