@font-face {
    font-family: 'Droid Serif', serif;
    font-weight: normal;
    font-style: normal;
}

body, .maincontent, .device, .swiper-slide img, .swiper-slide p {
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

body { 
  width: 100%;
  height: 100%;
  overflow: hidden;
  margin: 0 auto;
  padding: 0;
  color: #000; 
  text-align: center;
  background: url('http://mxweixin.dreamland360.com/sites/all/modules/wechat_ajax/imgs/yyhc_bj_low.jpg') no-repeat center center fixed;
  -moz-background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}


