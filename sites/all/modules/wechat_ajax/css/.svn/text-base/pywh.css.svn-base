.swiper-wrapper {
  margin-left: 5%;
}
@media only screen and (min-width : 321px) {
  .swiper-wrapper {
    margin-left: 10%;
  }
}

.device {
  clear: both;
  width: 100%;
  height: 80%;
  margin-top: 5%;
  position: absolute;
  padding: 0px;
	overflow:hidden;
}

.swiper-slide img {
  margin: 5px;
  display:block;
  background-color: white;
  padding: 8px;
  max-width: 100%;
  width: 16em;
  box-shadow: 2px 2px 8px #000;
  border-radius: 10px;
  text-align: center;
}

.swiper-slide p {
  margin: 5px;
  display:block;
  background-color: white;
  max-width: 100%;
  width: 15em;
  padding: 8px 8px 8px 12px;
  box-shadow: 2px 2px 8px #000;
  border-radius: 10px;
  text-align: left;
  font-size: 1.1em;
}

/* ===============================================================
Your custom styles, here you need to specify container's and slide's
sizes, pagination, etc.
================================================================*/
.swiper-container {
	/* Specify Swiper's Size: */
	width: 100%;
	height: 100%;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
.swiper-slide {
	/* Specify Slides's Size: */
	width: 100%;
	height: 100%;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
.swiper-slide-active {
	/* Specific active slide styling: */
	
}
.swiper-slide-visible {
	/* Specific visible slide styling: */	

}
/* ===============================================================
Pagination Styles
================================================================*/
.pagination {
  clear: both;
  position: absolute;
  text-align: center;
  bottom: 15%;
  width: 100%;
}
@media only screen and (min-width : 321px) {
  .pagination {
    bottom: 25%;
  }
}

.audio_wrapper {
  clear: both;
  width: 80%;
  margin: 0 auto;
  bottom: 10%;
  margin-left: 10%;
  position: absolute;
}
/* for small screen like iphone4s iphone5 and samsung small screen portrait */
@media only screen and (max-width : 320px) 
{
  .audio_wrapper {
    bottom: 5%;
  }
}

.swiper-pagination-switch {
	/* Stylize pagination button: */	
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 10px;
  background: #eee;
  box-shadow: 0px 1px 2px #555 inset;
  margin: 0 3px;
}

.swiper-active-switch {
	/* Specific active button style: */	
  /*background: #ff6600;*/
  background: #cc3300;
}
