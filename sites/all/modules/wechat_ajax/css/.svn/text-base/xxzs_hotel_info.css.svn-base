@font-face {
  font-family: 'Droid Serif', serif;
  font-weight: normal;
  font-style: normal;
}

body { 
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  height: 100%;
  overflow: hidden;
  margin : 0 auto;
  padding : 0;
  font : 100%/1.4 'Droid Serif', serif;
  text-align: center;
  background-color: #fffff7;
}

.maincontent {
  width: 100%;
  height: 100%;
  max-width: 100%;
  max-height: 100%;
  position: relative;
  padding: 0px;
}

#header-image{
  width: 100%;
  height: 10em;
}
#header-text {
  position:absolute;    
  color:white;
  font-size:1.1em;
  font-weight:bold;
  margin-top: 0;
  margin-bottom: 0;
  padding: 0 10px 0 10px;
  top:7em;
  background-color: rgba(102,102,102,0.7);
}

.address, .hotel-detail{
  width: 100%;
  height: 100%;
  border-bottom: 1px solid #cccccc;
  padding: 5px 0;
}

.a-text, .d-text{
  width: 8em;
  font-size: 1.2em;
  text-align: left;
  overflow: hidden;
  float: left;
}
.a-icon, .d-icon {
  vertical-align: middle;
}

table {
  border: 0;
  margin: 0 auto;
}

.room-table {
  border-top: 1px solid #ffffff;
  border-bottom: 1px solid #7e7e7e;
}
.room-image {
  border-top: 1px solid #ffffff;
  border-bottom: 1px solid #7e7e7e;
}

.div-room {
  clear: both;
  background: #cccccc;
  font-size: 1.3em;
  text-align: center;
}

.div-room p {
  margin: 0 auto;
}

.r-title {
  font-size: 1.3em;
  font: bold;
  text-align: left;
}
.r-price {
  color: #eb6100;
  text-align: left;
  font-size: 1.3em;
  vertical-align: top;
}
.r-info {
  width: 10em;
  font-size: 1em;
  color: #666666;
  text-align: left;
  border: 1px solid #f8c009;
}

.ul-image {
  list-style-type: none;
  margin: 0 auto;
  padding: 0px;
  width: 16em;
}

li.li-image {
  display: inline-block;
}
.li-image img{
  width: 5em;
  display: block;
  padding: 2px;
}

.hotel-image-title {
  clear: both;
  font-size: 1.3em;
  background: #f8c009;
  padding: 5px 0;
}
.hotel-image-list {
  margin-top: 5px;
  text-align: left;
  padding: 2px;
}
.hotel-image-list img {
  width: 6em;
  padding: 2px;
}

.hotel-image-list ul{
  list-style-type: none;
  margin: 0 auto;
  padding: 0px;
}

.hotel-image-list li{
  display: inline-block;
}

@media only screen and (max-width : 320px) {
  #header-text {
    left: 13em;
  }
  .a-icon img {
    margin-left: 2em;
  }
  .d-icon img {
    margin-left: 0.8em;
  }
  .hotel-image-list {
    margin-left: 0.5em;
  }
}

@media only screen and (min-width : 321px) {
  #header-text {
    left: 16em;
  }
  .a-icon img {
    margin-left: 4em;
  }
  .d-icon img {
    margin-left: 2em;
  }
  .hotel-image-list {
    padding-left: 2em;
  }
}

