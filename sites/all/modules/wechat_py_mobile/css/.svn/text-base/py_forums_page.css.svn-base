@font-face {
  font-family: 'Droid Serif', serif;
  font-weight: normal;
  font-style: normal;
}

body { 
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  height: 100%;
  overflow: hidden;
  margin : 0;
  padding : 0;
  font : 100%/1.4 'Droid Serif', serif;
  text-align: center;
  background-color: #f5f5f5;
}

.item-list {
  height: 90px;
  clear: both;
  text-align: left;
  border-bottom: 1px solid #d0d0d0;
  margin: 0.3em 0 0.3em 0;
}

.title-image {
  float: left;
  margin-top: 0.2em;
  margin-left: 0.5em;
}

.title-text {
  float: left;
  margin-top: 2em;
  margin-left: 0.5em;
}
.title-click {
  float: right;
  margin-top: 1.5em;
  margin-right: 1em;
}

