/* ===============================================================
Pagination Styles
================================================================*/
.pagination {
  position: absolute;
  left: 0;
  text-align: center;
  bottom: 35%;
  width: 100%;
}
/* for small screen like iphone4s iphone5 and samsung small screen portrait */
@media only screen and (max-width : 320px) 
{
  .pagination {
    bottom: 18%;
  }
}

.swiper-pagination-switch {
	/* Stylize pagination button: */	
  display: inline-block;
  width: 10px;
  height: 10px;
  border-radius: 10px;
  background: #eee;
  box-shadow: 0px 1px 2px #555 inset;
  margin: 0 3px;
  cursor: pointer;
}

